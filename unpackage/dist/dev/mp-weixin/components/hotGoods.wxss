
.poster-wapper{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
}
.poster{
	width: 200rpx;
	height: 270rpx;
}
.movie-name{
	width: 200rpx;
	margin-top:10rpx;
	font-size: 14px;
	font-weight: bold;
	/* 超出则省略 */
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.move-score-wapper{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}


